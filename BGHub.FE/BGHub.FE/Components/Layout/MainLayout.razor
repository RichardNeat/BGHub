@using BGHub.FE.Client.Components
@inherits LayoutComponentBase

<div class="page d-flex flex-column min-vh-100">

    <nav class="navbar navbar-expand-md navbar-dark bg-dark px-3">
        <a class="navbar-brand" href="#">🎲 BGHub 🎲</a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
            <div class="nav-scrollable">
                <nav class="flex-column">
                    <div class="nav-item px-3">
                        <NavLink class="nav-link d-flex align-items-center gap-2" href="" Match="NavLinkMatch.All">
                            <span class="bi bi-house-door-fill align-middle"></span> Home
                        </NavLink>
                        <NavLink class="nav-link d-flex align-items-center gap-2" href="/events" Match="NavLinkMatch.All">
                            <span class="bi bi-calendar-event align-middle"></span> Events
                        </NavLink>
                        <NavLink class="nav-link d-flex align-items-center gap-2" href="/profile" Match="NavLinkMatch.All">
                            <span class="bi bi-person-circle align-middle"></span> My Profile
                        </NavLink>
                    </div>
                </nav>
            </div>
        </div>
    </nav>

    <main class="flex-grow-1 p-4">
        <article class="content">
            @Body
        </article>
    </main>

    <footer class="bg-dark text-white text-center py-4">
        <p class="mb-0">Copyright &copy; @DateTime.Now.Year BGHub. All rights reserved.</p>
    </footer>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
