@using BGHub.FE.Models
@using BGHub.Models
@inject IJSRuntime JSRuntime

<li class="mb-4">
    <div class="card shadow-sm rounded">
        <div class="card-header bg-primary text-white">
            <h5 class="card-title mb-0">@Game.Name</h5>
        </div>
        <div class="card-body">
            <p class="card-text text-muted">Owned by: @Game.Owner.Name</p>
        </div>
        <img src="@Game.ImageUrl" alt="@Game.Name box art" class="img-fluid rounded mb-3 card-img" />
        @if (loggedInUser != null)
        {
            @if (Game.Owner.Id == loggedInUser.Id)
            {
                <button @onclick="ConfirmDeleteGame" class="btn btn-danger btn-sm mt-2">Remove</button>
            }
        }
    </div>
</li>

@code {
    [CascadingParameter] private User? loggedInUser { get; set; }

    [Parameter] public Game Game { get; set; }

    [Parameter] public EventCallback<int> HandleGameDeleted { get; set; }

    private async Task ConfirmDeleteGame()
    {
        bool isConfirmed = await JSRuntime.InvokeAsync<bool>("confirm", $"Are you sure you want to remove {Game.Name} from this event?");

        if (isConfirmed)
        {
            await DeleteGame();
        }
    }

    private async Task DeleteGame()
    {
        await HandleGameDeleted.InvokeAsync(Game.Id);
        // Call to DB to delete game from event
    }
}
